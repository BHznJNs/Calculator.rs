add1 = fn(i $Numb) {
    #        ^^^^
    #  param-type

    # 参数类型列表 :
    # AnyType         -> $_       
    # Boolean         -> $Bool
    # Number          -> $Numb
    # String          -> $Str
    # Array           -> $Array
    # Lazy-Expression -> $LazyExpr
    # Function        -> $Func
    # Object          -> $Obj

    # 使用 `brk` 关键字从函数中返回值。
    brk i + 1
}

out add1(10) # 11

add1 = fn(i) {
    # Any 类型的类型注解 `$_` 可以被省略。
    brk i + 1
}

out add1(1) # 2
